{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "commit": "git-cz",
    "cover": "nyc --reporter=html --reporter=lcov npm test",
    "lint": "tslint ./src/*.ts{,x} ./src/**/*.ts{,x} --project tsconfig.json",
    "precommit": "lint-staged",
    "pretest": "npm run lint && npm run build",
    "prettier": "prettier --write '{src,test}/**/*.ts'",
    "semantic-release": "semantic-release",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yelloan/node-helpers.git"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [
    "node",
    "helpers",
    "typescript"
  ],
  "author": "ccoeurderoy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yelloan/node-helpers/issues"
  },
  "homepage": "https://github.com/yelloan/node-helpers#readme",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --list-different \"{src,test}/**/*.ts\""
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": false,
    "extension": [
      ".ts"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
