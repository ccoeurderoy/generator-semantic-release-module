{
  "name": "generator-semantic-release-module",
  "version": "1.0.0",
  "description": "A yeoman generator building NodeJS TypeScript module with semantic-release",
  "scripts": {
    "commit": "git-cz",
    "cov": "nyc npm t",
    "lint": "eslint '{generators,test}/**/*.js' --ignore-pattern generators/app/templates/*.js --color",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write '{generators,test}/**/*.js'",
    "semantic-release": "semantic-release",
    "test": "mocha --no-timeouts",
    "test-ci": "npm run lint && npm run cov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccoeurderoy/semantic-module-generator.git"
  },
  "keywords": [
    "yeoman-generator"
  ],
  "files": [
    "generators"
  ],
  "author": "ccoeurderoy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ccoeurderoy/semantic-module-generator/issues"
  },
  "homepage": "https://github.com/ccoeurderoy/semantic-module-generator#readme",
  "dependencies": {
    "chalk": "^2.4.2",
    "yeoman-generator": "^4.1.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/git": "^7.0.18",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --list-different \"{generators,test}/**/*.js\""
    ]
  },
  "nyc": {
    "include": [
      "generators/**/*.js"
    ],
    "exclude": [
      "generators/app/templates/*.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 0
  },
  "publishConfig": {
    "access": "public"
  }
}
